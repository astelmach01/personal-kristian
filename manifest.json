{
  "manifest_version": 3,
  "name": "Personal Kristian",
  "version": "1.0",
  "permissions": ["activeTab", "tabs", "storage", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],

  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
